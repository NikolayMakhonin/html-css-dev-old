{
	"name": "@flemist/html-css-dev",
	"version": "1.0.8",
	"description": "Tool for fast develop web pages on html+css or postcss",
	"main": "server.js",
	"scripts": {
		"start": "node -e \"require('./start.js')({ baseConfig: './web-dev.config.js' })\"",
		"server": "node -e \"require('./server.js')({ baseConfig: './web-dev.config.js' })\"",
		"build": "node -e \"require('./build.js')({ baseConfig: './web-dev.config.js', watch: false })\"",
		"watch": "node -e \"require('./build.js')({ baseConfig: './web-dev.config.js', watch: true })\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/NikolayMakhonin/html-css-dev.git"
	},
	"author": "Nikolay Makhonin",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/NikolayMakhonin/html-css-dev/issues"
	},
	"homepage": "https://github.com/NikolayMakhonin/html-css-dev#readme",
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@flemist/easy-livereload": "^1.4.4",
		"@flemist/postcss-remove-global": "^0.1.4",
		"@flemist/web-logger": "^0.1.21",
		"@types/fs-extra": "^9.0.11",
		"autoprefixer": "^10.2.6",
		"cssnano": "^5.0.6",
		"express": "^4.17.1",
		"fs-extra": "^10.0.0",
		"globby": "^11.0.4",
		"multimatch": "^5.0.0",
		"node-watch": "^0.7.1",
		"postcss": "^8.3.5",
		"postcss-advanced-variables": "^3.0.1",
		"postcss-calc": "^8.0.0",
		"postcss-import": "^14.0.2",
		"postcss-load-config": "^3.1.0",
		"postcss-nested": "^5.0.5",
		"postcss-preset-env": "^6.7.0",
		"require-from-memory": "^1.0.2",
		"sirv": "^1.0.12"
	},
	"devDependencies": {
		"@flemist/postcss-file": "^0.1.7",
		"@rollup/plugin-commonjs": "^17.1.0",
		"@rollup/plugin-node-resolve": "^11.2.0",
		"@rollup/plugin-typescript": "^8.3.0",
		"@tsconfig/svelte": "^2.0.1",
